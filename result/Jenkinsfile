pipeline {
    
    agent any

    tools{
        nodejs 'NodeJS 17.0.1'
    }
    
    stages{
        stage('build'){
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Compiling result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Running unit tests on result app'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
        /*stage('package'){
            when{
                branch 'master'
                changeset '**//*result*//**'
            }
            steps{
                echo 'Package worker app'
                dir('worker'){
                    sh 'mvn package -DskipTests'
                    archiveArtifacts artifacts: '**//*target*//*.jar', fingerprint: true
                }
            }
        }*/
    }
    
    post{
        always{
            echo 'Pipeline for result is completed'
        }
        failure{
            slackSend (channel: "instavote-ci", message: "Build Failed - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
        }
        success{
            slackSend (channel: "instavote-ci", message: "Build Succeeded - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
        }
    }
    
}